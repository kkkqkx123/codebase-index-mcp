FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm ci

# Copy source code
COPY . .

# Create non-root user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S codebase -u 1001

# Change ownership
USER codebase

# Expose port
EXPOSE 3000

# Start the application in development mode
CMD ["npm", "run", "dev"]